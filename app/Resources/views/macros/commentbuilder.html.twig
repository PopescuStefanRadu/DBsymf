{% macro comments(comment) %}
    {% for child in comment.childcomment %}
        <li class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object">
                </a>
            </div>
            <div class="media-body">
                <p class="media-heading">{{child.user.username}}</p>
                <p>{{child.content}}</p>
            </div>
        </li>
        {% if child.childcomment is not null %}
            <ul>{{_self.comments(child)}}</ul>
        {% endif%}

    {% endfor %}
{% endmacro %}